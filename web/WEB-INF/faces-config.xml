<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>hotline1</managed-bean-name>
        <managed-bean-class>metier1.Hotline</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
            <from-view-id>/index.xhtml</from-view-id>
            <navigation-case>
                    <from-outcome>LOGIN</from-outcome>
                    <to-view-id>inscription.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>LIST</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>FALSE</from-outcome>
                    <to-view-id>/inscription.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>TRUE</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/requests_list.xhtml</from-view-id>
            <navigation-case>
                    <from-outcome>DETAILS</from-outcome>
                    <to-view-id>/request_details.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>SUPPORT</from-outcome>
                    <to-view-id>/respond.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>NEW</from-outcome>
                    <to-view-id>/index.xhtml</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/request_details.xhtml</from-view-id>
            <navigation-case>
                    <from-outcome>RETURN</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>REMOVED</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>SAVED</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/respond.xhtml</from-view-id>
            <navigation-case>
                    <from-outcome>SAVED</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>            
            <navigation-case>
                    <from-outcome>REMOVED</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>RETURN</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/inscription.xhtml</from-view-id>
            <navigation-case>
                    <from-outcome>LIST</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
    </navigation-rule>
    <navigation-rule>
            <from-view-id>/index_support.xhtml</from-view-id>
            <navigation-case>
                    <from-outcome>FALSE</from-outcome>
                    <to-view-id>/inscription.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                    <from-outcome>TRUE</from-outcome>
                    <to-view-id>/requests_list.xhtml</to-view-id>
            </navigation-case>
    </navigation-rule>
</faces-config>
